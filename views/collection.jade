extends layout

block content
			header#fh5co-header.fh5co-cover(role='banner', style='background-image:url(images/img_bg_1.jpg);')
				.overlay
				.container
					.row
						.col-md-12.col-md-offset-0.text-center
							.display-t
								.display-tc.animate-box(data-animate-effect='fadeInUp')
									h1.mb30 Our Collection
									h1.mb30#collectiontitle
										span#countTotal
			#fh5co-blog.fh5co-bg-section
				.container
					.row.animate-box.row-pb-md(data-animate-effect='fadeInUp')
						.col-md-8.col-md-offset-2.text-center.fh5co-heading
							span Thoughts & Ideas
							h2 Our Collection
							p
								| This is a basically a compilation of awesome ideas that may change the world.
							br
							form#search(action='/collection', method='post')
								.input-group#searchGroup
									select.selectpicker.form-control#searchfilter(data-live-search='true', title='Seach by: ')
										option(value='thesis') Thesis title
										option(value='tags') Thesis tag
										option(value='year') Year
									input.form-control#searchbox(type='text', aria-describedby='basic-addon1', placeholder='Looking for something in particular?')
									.span.input-group-btn
										input.btn.btn-danger#searchbtn(type='button' value='Search!')
					.row
						#thesis-body
