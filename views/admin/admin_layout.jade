  body.hold-transition.skin-red.sidebar-mini
    .example-modal
      .modal.modal-success#success
        .modal-dialog
          .modal-content
            .modal-header
              button.close(type='button', data-dismiss='modal', aria-label='Close')
                span(aria-hidden='true') x
              h4.modal-title Success
            .modal-body
              p Do you want to save changes you made to document before closing?
              p.text-warning
                small If you don't save, your changes will be lost.
            .modal-footer
              button.btn.btn-outline(type='button', data-dismiss='modal') Close
    .modal.fade#myModal
      .modal-dialog.modal-lg
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal', aria-hidden='true') &times;
            h4.modal-title File Viewer
          .modal-body
            #filepicker(type="filepicker-preview" style="width:100%; height:600px" data-fp-url="https://www.filestackapi.com/api/file/")
    .wrapper
      // Main Header
      header.main-header
        // Logo
        a.logo(href='/admin')
          // mini logo for sidebar mini 50x50 pixels
          span.logo-mini
            | T
            b I.
          // logo for regular state and mobile devices
          span.logo-lg
            | Thesis
            b IT
            | .
        // Header Navbar
        nav.navbar.navbar-static-top(role='navigation')
          // Sidebar toggle button
          a.sidebar-toggle(href='#', data-toggle='offcanvas', role='button')
            span.sr-only Toggle navigation
          // Navbar Right Menu
          .navbar-custom-menu
            ul.nav.navbar-nav
              // User Account Menu
              li.dropdown.user.user-menu
                // Menu Toggle Button
                a.dropdown-toggle(href='#', data-toggle='dropdown')
                  // The user image in the navbar
                  img.user-image(src='http://static.tumblr.com/0hxowcx/TKtm8i1j5/iron_man_face_avatar_01.gif', alt='User Image')
                  // hidden-xs hides the username on small devices so only the image appears.
                  span.hidden-xs #{user.firstname} #{user.lastname}
                ul.dropdown-menu
                  // The user image in the menu
                  li.user-header
                    img.img-circle(src='http://static.tumblr.com/0hxowcx/TKtm8i1j5/iron_man_face_avatar_01.gif', alt='User Image')
                    p
                      | #{user.firstname} #{user.lastname} - Engineer | Billionaire
                      small @#{user.username}
                  // Menu Footer
                  li.user-footer
                    .pull-left
                      a.btn.btn-primary.btn-flat(href='/') Return to Website
                    .pull-right
                      a.btn.btn-danger.btn-flat(href='/auth/logout') Sign out
      // Left side column. contains the logo and sidebar
      aside.main-sidebar
        section.sidebar
          // Sidebar Menu
          ul.sidebar-menu
            li.header MENU
            li(class=(title === "Users" ? 'active' : ''))
              a(href='/admin')
                i.fa.fa-user
                span Users
            li(class=(title === "Collection" ? 'active' : ''))
              a(href='/admin/collections')
                i.fa.fa-cubes
                span Collection
            li.treeview(class=(title === "Add" || title==="Edit" || title==="Delete" ? 'active' : ''))
              a(href='#')
                i.fa.fa-commenting
                span Requests
                span.pull-right-container
                //-   span#requestContainer.label.label-success.pull-right 17
                  //- i.fa.fa-angle-left.pull-right
              ul.treeview-menu
                li(class=(title === "Add" ? 'active' : ''))
                  a(href='/admin/add')
                    i.fa.fa-circle-o 
                    span Add
                    span.pull-right-container
                      //- span.label.label-warning.pull-right 5
                li(class=(title === "Edit" ? 'active' : ''))
                  a(href='/admin/edit')
                    i.fa.fa-circle-o
                    span Edit
                    span.pull-right-container
                      //- span.label.label-warning.pull-right 0
                li(class=(title === "Delete" ? 'active' : ''))
                  a(href='/admin/delete')
                    i.fa.fa-circle-o
                    span Delete
                    span.pull-right-container
                      //- span.label.label-warning.pull-right 12
          // /.sidebar-menu
        // /.sidebar
      // Content Wrapper. Contains page content
      .content-wrapper
        // Content Header (Page header)
        section.content-header
          h1
            | #{title}
          ol.breadcrumb
            li
              a(href='#')
                i.fa.fa-dashboard
                |  Dashboard
            li.active #{title}

        block content
          // Main content
          section.content
            // Your Page Content Here
          // /.content
        // /.content-wrapper

      block footer
        // Main Footer
        footer.main-footer
          // To the right
          .pull-right.hidden-xs
            | Anything you want
          // Default to the left
          strong
            | Copyright Â© 2017 
            a(href='/') Thesis It v2.0
            | .
          |  All rights reserved.

        //
          Add the sidebar's background. This div must be placed
          immediately after the control sidebar
        .control-sidebar-bg
